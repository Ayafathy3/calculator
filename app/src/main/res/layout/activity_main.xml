<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/font8"
        android:padding="@dimen/_10sdp"
        android:text="run"
        android:textColor="#8c4343"
        android:textSize="@dimen/_50sdp" />

    <EditText
        android:id="@+id/operator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:background="#f8fbf7f7"
        android:inputType="number"
        android:lines="1"
        android:textSize="@dimen/_18sdp" />

    <TextView
        android:id="@+id/textResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/operator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="0.00"
        android:textSize="@dimen/_30sdp" />

    <TextView
        android:id="@+id/textClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/row1"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/_16sdp"
        android:text="CLR"
        android:textColor="#222"
        android:textSize="@dimen/_20sdp" />

    <TextView
        android:id="@+id/textShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/row1"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/_16sdp"
        android:text="history"
        android:textColor="#222"
        android:textSize="@dimen/_20sdp" />

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_above="@id/row2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dra"
            android:padding="@dimen/_12sdp"
            android:text="save"
            android:textAllCaps="false"
            android:textSize="@dimen/_16sdp" />

        <ImageButton
            android:id="@+id/btroot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/squa"
            android:src="@drawable/dra" />


        <Button
            android:id="@+id/bt__x"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dra"
            android:padding="@dimen/_12sdp"
            android:text="x !"
            android:textSize="@dimen/_18sdp"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/btadd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dra"
            android:padding="@dimen/_12sdp"
            android:text="+"
            android:textSize="@dimen/_18sdp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_above="@+id/row3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dra"
            android:padding="@dimen/_12sdp"
            android:text="7"
            android:textSize="@dimen/_18sdp" />

        <Button
            android:id="@+id/bt8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dra"
            android:padding="@dimen/_12sdp"
            android:text="8"
            android:textSize="@dimen/_18sdp" />

        <Button
            android:id="@+id/bt9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dra"
            android:padding="@dimen/_12sdp"
            android:text="9"
            android:textSize="@dimen/_18sdp" />

        <Button
            android:id="@+id/btsub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dra"
            android:padding="@dimen/_12sdp"
            android:text="-"
            android:textSize="@dimen/_18sdp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_above="@+id/row4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dra"
            android:padding="@dimen/_12sdp"
            android:text="4"
            android:textSize="@dimen/_18sdp" />

        <Button
            android:id="@+id/bt5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dra"
            android:padding="@dimen/_12sdp"
            android:text="5"
            android:textSize="@dimen/_18sdp" />

        <Button
            android:id="@+id/bt6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dra"
            android:padding="@dimen/_12sdp"
            android:text="6"
            android:textSize="@dimen/_18sdp" />

        <Button
            android:id="@+id/btmulti"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dra"
            android:padding="@dimen/_12sdp"
            android:text="*"
            android:textSize="@dimen/_18sdp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_above="@+id/row5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dra"
            android:padding="@dimen/_12sdp"
            android:text="1"
            android:textSize="@dimen/_18sdp" />

        <Button
            android:id="@+id/bt2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dra"
            android:padding="@dimen/_12sdp"
            android:text="2"
            android:textSize="@dimen/_18sdp" />

        <Button
            android:id="@+id/bt3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dra"
            android:padding="@dimen/_12sdp"
            android:text="3"
            android:textSize="@dimen/_18sdp" />


        <Button
            android:id="@+id/btdiv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dra"
            android:padding="@dimen/_12sdp"
            android:text="/"
            android:textSize="@dimen/_18sdp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/row5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btdot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dra"
            android:padding="@dimen/_12sdp"
            android:text="."
            android:textSize="@dimen/_18sdp" />

        <Button
            android:id="@+id/bt0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dra"
            android:padding="@dimen/_12sdp"
            android:text="0"
            android:textSize="@dimen/_18sdp" />

        <Button
            android:id="@+id/btXsquar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dra"
            android:padding="@dimen/_12sdp"
            android:text="x2"
            android:textSize="@dimen/_16sdp" />


        <Button
            android:id="@+id/btequal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dra"
            android:padding="@dimen/_12sdp"
            android:text="="
            android:textSize="@dimen/_18sdp" />
    </LinearLayout>

    <include
        android:id="@+id/includedLayout"
        layout="@layout/showoperation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/row1"
        android:layout_toLeftOf="@+id/textClear"
        android:visibility="gone" />
</RelativeLayout>